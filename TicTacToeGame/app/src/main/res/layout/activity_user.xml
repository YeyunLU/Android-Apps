<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User">

    <ImageButton
            android:layout_width="90dp"
            android:layout_height="110dp" app:srcCompat="@drawable/people"
            android:id="@+id/user" android:layout_marginTop="40dp"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <EditText
            android:layout_width="286dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/username"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:hint="User Name" android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/user"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/background_dark" android:textColorHint="@android:color/darker_gray"
            app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="Update"
            android:layout_width="293dp"
            android:layout_height="41dp"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:id="@+id/update"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/idx3"/>
    <Button
            android:text="cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idx1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintEnd_toStartOf="@+id/idx3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idx2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintStart_toEndOf="@+id/idx3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="paw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idx3"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.469"/>
</android.support.constraint.ConstraintLayout>